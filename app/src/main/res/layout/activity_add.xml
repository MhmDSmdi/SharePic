<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/img_edit_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:src="@color/colorPrimary"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTxt_edit_title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="@string/imageTitle_hint"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="24sp"/>

            <EditText
                android:id="@+id/editTxt_edit_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/imageCaption_hint"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editTxt_edit_note"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                android:hint="@string/imageNote_hint"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit"
        app:layout_anchor="@id/appBar_edit"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />


</android.support.design.widget.CoordinatorLayout>